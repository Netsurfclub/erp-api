type Query {
    products: [Product]
}

type Mutation {
    createProduct(input: ProductInput!): Product!
}

type Product {
    id: ID!
    name: String
    supplier: Supplier
    price: Float
    unit: String
    photo: String
    onStock: Int
}

type Supplier {
    id: ID!
    name: String
}

input ProductInput {
    name: String
    supplierId: Int
    price: Float
    unit: String
    onStock: Int
}
